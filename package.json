{
  "name": "futil",
  "version": "0.0.0",
  "description": "A suite of frontend utilies in convenient unbarreled packages",
  "repository": "git@github.com:bigwoof91/frontend-utils.git",
  "author": "Michael Wolf",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "scripts": {
    "___________DEVELOPMENT___________": "development scripts",
    "commit": "git cz",
    "setup": "pnpm i && husky install",
    "browser": "pnpm --filter \"@futil/browser\"",
    "core": "pnpm --filter \"@futil/core\"",
    "config:eslint": "pnpm --filter \"eslint-config-futil\"",
    "___________QUALITY___________": "code quality and maintenance",
    "lint": "eslint \"{,!(node_modules)/**/}*.{ts,tsx,md,mdx,yml}\" --report-unused-disable-directives ",
    "tscheck": "turbo run tscheck",
    "quality": "pnpm lint && pnpm test",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "turbo run clean && rimraf node_modules",
    "___________BUILD___________": "building/bundling scripts",
    "build": "turbo run build",
    "build:quick": "turbo run build:quick",
    "___________RELEASE___________": "release scripts",
    "changeset": "changeset",
    "version:stable": "changeset version",
    "release:stable": "pnpm build && changeset publish"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/cz-commitlint": "^17.7.1",
    "@internal/tsconfig": "workspace:^",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "colorette": "^2.0.20",
    "commitizen": "^4.3.0",
    "eslint": "^8.49.0",
    "eslint-config-futil": "workspace:^",
    "execa": "^8.0.1",
    "find-packages": "^10.0.4",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "outdent": "^0.8.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "terser": "^5.19.4",
    "tsup": "^7.2.0",
    "turbo": "latest",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4",
    "vitest-fetch-mock": "^0.2.2"
  },
  "devDependencies": {
    "husky": "^8.0.0"
  }
}
